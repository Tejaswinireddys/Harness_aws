# =============================================================================
# RabbitMQ Environment Configuration
# Generated by Ansible - {{ ansible_date_time.iso8601 }}
# =============================================================================

# Node name
NODENAME=rabbit@{{ inventory_hostname }}

# Node IP address (bind to all interfaces)
NODE_IP_ADDRESS=0.0.0.0

# Node port
NODE_PORT={{ rabbitmq_tcp_listen_port }}

# Use long node names
USE_LONGNAME=false

# Erlang VM configuration
# Memory allocator settings for better performance
ERL_EPMD_ADDRESS=0.0.0.0
ERL_EPMD_PORT=4369

# Erlang cookie location
# RABBITMQ_ERLANG_COOKIE_FILE=/var/lib/rabbitmq/.erlang.cookie

# Config file location
RABBITMQ_CONFIG_FILE=/etc/rabbitmq/rabbitmq.conf

# Enabled plugins file
RABBITMQ_ENABLED_PLUGINS_FILE=/etc/rabbitmq/enabled_plugins

# Log base directory
RABBITMQ_LOG_BASE=/var/log/rabbitmq

# Mnesia database directory
RABBITMQ_MNESIA_DIR=/var/lib/rabbitmq/mnesia

# PID file
RABBITMQ_PID_FILE=/var/lib/rabbitmq/rabbitmq.pid

# Distribution port range for CLI tools
RABBITMQ_DIST_PORT=25672
